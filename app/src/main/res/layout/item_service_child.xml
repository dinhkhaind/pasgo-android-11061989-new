<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnServiceParent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_white_null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/booking_service_lv_width"
        android:layout_marginStart="@dimen/booking_service_lv__item_margin_left_right"
        android:layout_marginEnd="@dimen/booking_service_lv__item_margin_left_right"
        android:layout_marginBottom="@dimen/booking_service_lv__item_margin_bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSelected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/booking_service_item_img"
            android:scaleType="centerInside"
            android:src="@drawable/datxe_checked" />

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:lines="1"
            android:ellipsize="end"
            android:text="@string/tat_ca"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvServiceName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:lines="1"
            android:ellipsize="end"
            android:text="@string/hang_xe_name"
            android:textColor="#000" />

        <LinearLayout
            android:id="@+id/lnDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvServiceDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_datxe_service_discount"
                    android:paddingBottom="1dp"
                    android:paddingStart="@dimen/booking_service_lv_item_discount_margin_left_right"
                    android:paddingEnd="@dimen/booking_service_lv_item_discount_margin_left_right"
                    android:paddingTop="1dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="10%"
                    android:textColor="@color/discount_text" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
