<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvContentConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="@string/update_password"
                    android:textColor="@color/red_strong"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@drawable/border_vien"
                android:layout_marginStart="@dimen/margin_all"
                android:layout_marginEnd="@dimen/margin_all"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/login_margin_left_right"
                android:layout_marginEnd="@dimen/login_margin_left_right"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_textbox_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_all"
                    android:background="@drawable/bg_edittext"
                    android:hint="@string/pass_word"
                    android:inputType="textPassword"
                    android:maxLength="160"
                    android:paddingStart="@dimen/margin_all"
                    android:scrollbars="horizontal|vertical"
                    android:lines="1"
                    android:textColor="@color/den" />

                <EditText
                    android:id="@+id/edtPasswordAgain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_textbox_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/login_button_margin_top"
                    android:background="@drawable/bg_edittext"
                    android:hint="@string/pass_word_again"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="160"
                    android:paddingStart="@dimen/margin_all"
                    android:scrollbars="horizontal|vertical"
                    android:lines="1"
                    android:textColor="@color/den" />

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_langage_height"
                    android:layout_marginTop="@dimen/margin_all"
                    android:background="@drawable/selector_bg_red"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_button_langage_textsize" />

                <TextView
                    android:id="@+id/tvThongBao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_all"
                    android:text="@string/update_content_popup"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvDieuKhoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_content_popup2"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>