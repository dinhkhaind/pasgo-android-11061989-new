<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layout_popup_width"
    android:layout_height="match_parent"
    android:background="@color/mau_nen_chung"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_all"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:autoLink="email"
        android:textSize="@dimen/popup_text_title_size"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@drawable/border_vien"
        android:layout_marginStart="@dimen/margin_popup_line"
        android:layout_marginEnd="@dimen/margin_popup_line"/>.
    <TextView
        android:id="@+id/tvThongBaoPopup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_all"
        android:layout_marginEnd="@dimen/margin_all"
        android:layout_marginTop="@dimen/margin_all"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/popup_text_size"
        android:layout_gravity="left"/>
    <TextView
        android:id="@+id/tvThongBaoPopup12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_all"
        android:layout_marginEnd="@dimen/margin_all"
        android:layout_marginTop="@dimen/text_margin_left_right"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/popup_text_size"
        android:layout_gravity="left"/>
    <TextView
        android:id="@+id/tvThongBaoPopup13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_all"
        android:layout_marginEnd="@dimen/margin_all"
        android:layout_marginTop="@dimen/text_margin_left_right"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/popup_text_size"
        android:layout_gravity="left"/>
    <TextView
        android:id="@+id/tvThongBaoPopup14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_all"
        android:layout_marginEnd="@dimen/margin_all"
        android:layout_marginTop="@dimen/text_margin_left_right"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/popup_text_size"
        android:layout_gravity="left"/>
    <TextView
        android:id="@+id/tvThongBaoPopup15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_all"
        android:layout_marginEnd="@dimen/margin_all"
        android:layout_marginTop="@dimen/text_margin_left_right"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/popup_text_size"
        android:layout_gravity="left"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="- - - - - - - - -"/>
    <TextView
        android:id="@+id/tvThongBaoPopup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_all"
        android:layout_marginEnd="@dimen/margin_all"
        android:layout_marginBottom="@dimen/margin_all"
        android:text="@string/check_in_success2"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="@dimen/popup_text_size"/>

</LinearLayout>