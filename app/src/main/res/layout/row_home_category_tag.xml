<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:presco="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_view_ln"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_all_one_half"
            android:layout_marginStart="@dimen/margin_all_one_half"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_while"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgLogo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/margin_all_one_half"
                android:scaleType="centerCrop"
                fresco:placeholderImage="@drawable/image_loading"
                android:src="@drawable/dia_diem_nhau" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/home_text_tag_margin_left"
                android:textColor="@color/black"
                android:text="@string/app_name"
                android:textSize="@dimen/home_home_row_tag_name"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>