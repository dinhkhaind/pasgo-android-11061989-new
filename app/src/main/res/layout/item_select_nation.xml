<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lnTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="A"
            android:textColor="@color/red_strong"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/row_nation_name_title_size"></TextView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        >
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="Viá»‡t Nam"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/row_nation_name_text_size"></TextView>

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="(+84)"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/row_nation_code_text_size">
        </TextView>
    </RelativeLayout>
</LinearLayout>