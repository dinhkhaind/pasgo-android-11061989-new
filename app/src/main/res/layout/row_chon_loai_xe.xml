<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/datxe_text_margin_top_bottom"
        android:layout_marginTop="@dimen/datxe_text_margin_top_bottom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgTaxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_taxi_4_hatback" />

        <TextView
            android:id="@+id/tvTaxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgTaxi"
            android:text="@string/chon_loai_xe_taxi_4_cho_hatback" />
    </RelativeLayout>

</LinearLayout>