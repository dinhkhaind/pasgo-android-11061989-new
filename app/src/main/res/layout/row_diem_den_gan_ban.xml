<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:presco="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:orientation="vertical"
    android:background="@color/day_layout_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/data_ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@drawable/bg_line_padding">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="@dimen/di_xe_mien_phi_row_image_width_height"
                    android:layout_height="@dimen/di_xe_mien_phi_row_image_width_height">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/diem_den_row_image_height"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/home_item_margin_all"
                        android:layout_marginEnd="@dimen/home_item_margin_all"
                        android:layout_marginTop="@dimen/home_item_margin_all"
                        android:layout_alignParentTop="true">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/imgLogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:background="@drawable/image_loading"
                            presco:placeholderImage="@drawable/image_loading" />
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/imgLogoDefault"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            fresco:placeholderImage="@drawable/image_loading"
                            android:background="@drawable/logo_partnerdf_home"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/rating_km_ln"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/home_item_margin_all"
                        android:layout_marginEnd="@dimen/home_item_margin_all"
                        android:layout_marginTop="@dimen/home_item_margin_all"
                        android:layout_alignParentBottom="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/gia_trung_binh_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:text="150.000đ"
                                android:textSize="@dimen/diem_den_item_text_km"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dien_den_cach_height"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <RatingBar
                                android:id="@+id/ratingChatLuong"
                                style="@style/rowChatLuongRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:clickable="false"
                                android:focusable="false"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="2.5"
                                android:stepSize="0.10" />
                            <View
                                android:id="@+id/view_v1"
                                android:layout_width="1dp"
                                android:layout_height="@dimen/diem_den_view_height"
                                android:layout_marginStart="2dp"
                                android:background="@color/line_diem_den">
                            </View>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/khoang_cach"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/diem_den_km_text_margin_right"
                                android:paddingEnd="@dimen/diem_den_km_text_margin_right"
                                android:visibility="visible"
                                android:layout_toStartOf="@+id/tvKhoangCach"
                                />

                            <TextView
                                android:id="@+id/tvKhoangCach"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:lines="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="2.0km"
                                android:textColor="@color/doitac_lv_km"
                                android:textSize="@dimen/diem_den_item_text_km" />

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/di_xe_mien_phi_row_image_width_height">
                    <RelativeLayout
                        android:id="@+id/rlDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_white"
                        android:layout_above="@+id/button_ln">
                        <LinearLayout
                            android:id="@+id/ten_doi_tac_ln"
                            android:layout_width="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/home_item_margin_all"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginStart="2dp"
                                android:background="@drawable/corner_item_rating"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_marginStart="@dimen/diem_den_item_rating_margin"
                                    android:layout_marginEnd="@dimen/diem_den_item_rating_margin"
                                    android:gravity="center_vertical"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_sao_trang"/>

                                    <TextView
                                        android:id="@+id/tvRating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3.5"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/diem_den_rating_text_km"
                                        android:textColor="@color/white"/>
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tvTenDoiTac"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/text_margin_left_right"
                                android:layout_marginEnd="@dimen/di_xe_mien_phi_tv_ten_margin_right"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:ellipsize="end"
                                android:textColor="@color/black"
                                android:text="Chợ quê Restaurent"
                                android:textSize="@dimen/home_item_text_size">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ten_doi_tac_ln"
                            android:layout_toStartOf="@+id/imgDetail"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTenDuong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/di_xe_mien_phi_rating_margin_left"
                                android:lines="1"
                                android:ellipsize="end"
                                android:text="ha noi"
                                android:textColor="@color/doitac_lv_km"
                                android:layout_marginTop="@dimen/home_diem_den_text_margin"
                                android:layout_marginBottom="@dimen/home_diem_den_text_margin"
                                android:textSize="@dimen/home_item_name_text_size">

                            </TextView>
                            <TextView
                                android:id="@+id/tvNoiDungTaiTro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/di_xe_mien_phi_rating_margin_left"
                                android:lines="1"
                                android:ellipsize="end"
                                android:text="Giảm đến 50% khi đặt chỗ trước"
                                android:textColor="@color/diem_den_item_text_tai_tro"
                                android:layout_marginTop="@dimen/home_diem_den_text_margin"
                                android:layout_marginBottom="@dimen/home_diem_den_text_margin"
                                android:textSize="@dimen/home_item_name_text_size">
                            </TextView>

                            <TextView
                                android:id="@+id/tvChuyenMon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/di_xe_mien_phi_rating_margin_left"
                                android:lines="1"
                                android:ellipsize="end"
                                android:text="Chuyên món ăn hà nội"
                                android:textColor="@color/diem_den_item_text_chuyen_mon"
                                android:layout_marginTop="@dimen/home_diem_den_text_margin"
                                android:layout_marginBottom="@dimen/home_diem_den_text_margin"
                                android:textSize="@dimen/home_item_name_text_size">
                            </TextView>


                        </LinearLayout>
                        <ImageView
                            android:id="@+id/imgDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/arrow_right" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:background="@color/xam_mo" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/diem_den_btn_dat_cho_height"
                                android:orientation="horizontal">
                                <Button
                                    android:id="@+id/btnThePasgo"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/selector_white"
                                    android:text="@string/pasgo_card"
                                    android:lines="1"
                                    android:ellipsize="end"
                                    android:visibility="gone"
                                    android:textSize="@dimen/dat_cho_btn_text_size"
                                    android:textColor="@color/btn_dat_cho" />
                                <Button
                                    android:id="@+id/btnCheckIn"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/selector_white"
                                    android:text="@string/reserve"
                                    android:lines="1"
                                    android:ellipsize="end"
                                    android:textSize="@dimen/dat_cho_btn_text_size"
                                    android:textColor="@color/btn_dat_cho" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@drawable/bg_line_padding">

        </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/disconnect_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/day_layout_bg"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/loi_ket_noi"
            android:textColor="@color/red_strong"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/btnTryAGainDoiTac"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/selector_bg_red"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/margin_all"
            android:layout_gravity="center_horizontal"
            android:text="@string/thu_lai"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/no_data_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:background="@color/day_layout_bg"
        android:paddingStart="@dimen/margin_all"
        android:gravity="center_horizontal"
        android:paddingEnd="@dimen/margin_all"
        android:text="@string/chua_co_diem_nao"/>
    <LinearLayout
        android:id="@+id/progressbar_ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:background="@color/day_layout_bg">
        <ProgressBar
            android:id="@+id/progressBarDoiTac"
            style="?android:attr/progressBarStyleLarge"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="@dimen/progress_width_loading_data_dialog"
            android:layout_height="@dimen/progress_height_loading_data_dialog"
            android:layout_gravity="center_vertical|center_horizontal"
            android:indeterminate="true" />
    </LinearLayout>

</LinearLayout>