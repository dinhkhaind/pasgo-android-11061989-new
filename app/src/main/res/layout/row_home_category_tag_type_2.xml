<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_view_ln"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_bg_corner_gray"
        android:gravity="center"
        android:layout_margin="@dimen/home_tag_type_2_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin_left_right"
            android:gravity="center"
            android:lines="2"
            android:text="@string/app_name"
            android:textColor="@color/link_text"
            android:textSize="@dimen/home_home_row_tag_name" />
    </LinearLayout>
</LinearLayout>