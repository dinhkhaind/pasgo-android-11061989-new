                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/home_item_margin_all"
                            android:layout_marginEnd="@dimen/home_item_margin_all"
                            android:layout_marginTop="@dimen/home_item_margin_top"
                            android:layout_alignParentBottom="true">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/gia_trung_binh_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="150.000 - 180.000Ä‘"
                                    android:textSize="@dimen/diem_den_item_text_km"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dien_den_cach_height"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <RatingBar
                                    android:id="@+id/ratingChatLuong"
                                    style="@style/rowChatLuongRatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:isIndicator="true"
                                    android:layout_marginStart="@dimen/rating_margin_left"
                                    android:numStars="5"
                                    android:rating="2.5"
                                    android:stepSize="0.10" />
                                <View
                                    android:id="@+id/view_v1"
                                    android:layout_width="1dp"
                                    android:layout_height="@dimen/diem_den_view_height"
                                    android:layout_marginStart="3dp"
                                    android:background="@color/line_diem_den">
