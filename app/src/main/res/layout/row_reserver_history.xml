                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/lnDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/selector_white">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:id="@+id/ten_doi_tac_ln"
                                        android:layout_width="match_parent"
                                        android:layout_alignParentTop="true"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="@dimen/home_item_margin_all"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:layout_marginStart="2dp"
                                            android:background="@drawable/corner_item_rating"
                                            android:orientation="horizontal">
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_marginStart="@dimen/diem_den_item_rating_margin"
                                                android:layout_marginEnd="@dimen/diem_den_item_rating_margin"
                                                android:gravity="center_vertical"
                                                android:layout_height="wrap_content">
