                                            android:textSize="@dimen/di_xe_mien_phi_item_name_text_size">

                                        </TextView>
                                        <TextView
                                            android:id="@+id/tvChuyenMon"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:lines="1"
                                            android:ellipsize="end"
