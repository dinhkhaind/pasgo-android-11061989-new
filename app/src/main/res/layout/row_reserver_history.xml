            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lnDetaila"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/reserved_row_image_width_height"
                        android:layout_height="@dimen/reserved_row_image_width_height">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/diem_den_row_image_height"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/home_item_margin_all"
                            android:layout_marginEnd="@dimen/home_item_margin_all"
                            android:layout_marginTop="@dimen/home_item_margin_all"
