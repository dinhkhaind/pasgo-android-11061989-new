                                        android:layout_marginTop="3dp"
                                        android:layout_marginEnd="7dp"
                                        android:src="@drawable/icon_dang_cho" />
                                    <ImageView
                                        android:id="@+id/da_den_img"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:src="@drawable/icon_dat_cho_da_den" />
                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/lnDetaila"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/chua_den_ln"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/reserved_btn_margin_all"
                        android:background="@drawable/bg_vien"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCallSuport"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/reserved_btn_dat_cho_height"
                            android:layout_weight="1"
                            android:background="@drawable/selector_white"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="@string/edit_infomation"
                            android:textColor="@color/red"
                            android:textSize="@dimen/resered_btn_text_size" />
                        <Button
                            android:id="@+id/btnDirection"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/reserved_btn_dat_cho_height"
                            android:layout_weight="1"
                            android:background="@drawable/selector_white"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="@string/chi_duong"
                            android:textColor="@color/red"
                            android:textSize="@dimen/resered_btn_text_size" />
                        <Button
                            android:id="@+id/share_btn"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/reserved_btn_dat_cho_height"
                            android:layout_weight="1"
                            android:background="@drawable/selector_white"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="@string/share_check_in"
                            android:textColor="@color/red"
                            android:textSize="@dimen/resered_btn_text_size" />
                        <Button
                            android:id="@+id/btnDeals"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/reserved_btn_dat_cho_height"
                            android:layout_weight="1"
                            android:background="@drawable/selector_white"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="@string/uu_dai"
                            android:textColor="@color/red"
                            android:textSize="@dimen/resered_btn_text_size" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/reserve_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/reserved_btn_dat_cho_height"
                        android:background="@drawable/selector_white"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_margin="@dimen/reserved_btn_margin_all"
                        android:text="@string/reserve"
                        android:textColor="@color/red"
                        android:textSize="@dimen/resered_btn_text_size" />
