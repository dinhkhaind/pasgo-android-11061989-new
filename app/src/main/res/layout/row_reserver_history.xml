                                                    android:id="@+id/tvRating"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="3.5"
                                                    android:gravity="center_vertical"
                                                    android:textSize="@dimen/diem_den_rating_text_km"
                                                    android:textColor="@color/white"/>
                                            </LinearLayout>
