                                            android:textSize="@dimen/di_xe_mien_phi_item_name_text_size">

                                        </TextView>
                                        <LinearLayout
                                            android:id="@+id/lnPeople"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/home_diem_den_text_margin"
                                            android:gravity="center_vertical"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal">

                                                <TextView
                                                    android:id="@+id/so_nguoi_common_tv"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:text="@string/so_nguoi_lon_common"
                                                    android:textColor="@color/doitac_lv_km"
                                                    android:textSize="@dimen/da_check_in_item_text_size" />

                                                <TextView
                                                    android:id="@+id/tvSoNguoiDen"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginStart="@dimen/da_check_in_item_text_margin_to_left"
                                                    android:gravity="center_vertical"
                                                    android:lines="1"
                                                    android:ellipsize="end"
                                                    android:text="1"
                                                    android:textColor="@color/red"
                                                    android:textSize="@dimen/da_check_in_item_text_size" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal">

                                                <TextView
                                                    android:id="@+id/so_nguoi__tre_em_common_tv"
