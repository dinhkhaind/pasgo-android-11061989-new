                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:gravity="center_vertical"
                                                    android:lines="1"
                                                    android:ellipsize="end"
                                                    android:textStyle="bold"
                                                    android:text="@string/thoi_gian_den_common"
                                                    android:textColor="@color/doitac_lv_km"
                                                    android:textSize="@dimen/da_check_in_item_text_size" />
                                                <TextView
                                                    android:id="@+id/tvThoiGianDen"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:gravity="center_vertical"
                                                    android:layout_marginStart="@dimen/text_margin_left_right"
