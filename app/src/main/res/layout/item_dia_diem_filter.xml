<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/filter_all_ln"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="10dp"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/lnParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/filter_background_color"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/padding_gray"></View>
        <TextView
            android:id="@+id/tvNameParent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/filter_item_width"
            android:layout_marginStart="@dimen/margin_all"
            android:text="Co Quan"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/mau_den"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlChild"
        android:layout_width="match_parent"
        android:background="@drawable/selector_bg_transparent"
        android:layout_height="@dimen/filter_item_width">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_all"
            android:text="Co Quan"
            android:layout_centerVertical="true"
            android:textColor="@color/mau_den"
            android:textStyle="normal" />
        <CheckBox
            android:id="@+id/chkCheck"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"

            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/padding_gray"></View>

</LinearLayout>