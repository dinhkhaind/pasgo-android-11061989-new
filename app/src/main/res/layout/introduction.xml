<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    <ImageView
        android:id="@+id/im_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/text_intro"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:id="@+id/text_intro"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_content_intro"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/numberp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_all"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/circle1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/circle2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/circle3"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/circle4"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/circle5"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/circle6"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/title_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="dat cho"
            android:textSize="@dimen/intro_title_text_size"
            android:layout_toEndOf="@+id/numberp"
            android:layout_toStartOf="@+id/skip_btn"/>
        <Button
            android:id="@+id/skip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/margin_all"
            android:background="@drawable/selector_bg_transparent_gray"
            android:textSize="@dimen/intro_skip_text_size"
            android:text="@string/skip_intro"/>
    </RelativeLayout>

</RelativeLayout>