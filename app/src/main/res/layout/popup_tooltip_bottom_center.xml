<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rlToolTipBottomCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/lnView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_tooltip"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvBottomCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tooltip_margin_left_right"
                android:layout_marginEnd="@dimen/tooltip_margin_left_right"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="30dp"
                android:minWidth="50dp"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/datxe_text_dia_diem_don_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-1dip"
            android:src="@drawable/ic_tooltip_dow" />
    </RelativeLayout>

</FrameLayout>