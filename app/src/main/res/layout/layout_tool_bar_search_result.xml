<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/tool_bar_ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:background="@color/bg_actionbar"
            android:gravity="center"
            android:layout_alignParentTop="true"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            style="@style/Widget.AppCompat.Toolbar">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/im_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@+id/quan_huyen_ln"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ket_qua"
                        android:textColor="@color/gray_1"
                        android:textSize="@dimen/tool_bar_title_reserve_search_size"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_gravity="center" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toolbar Title"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tool_bar_title_reserve_search_size"
                        android:lines="1"
                        android:ellipsize="end"
                        android:paddingStart="3dp"
                        android:layout_gravity="center"
                        android:id="@+id/toolbar_title" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/imgPasgo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@+id/quan_huyen_ln"
                    android:src="@drawable/logo_title"
                    android:visibility="gone"
                    />
                <ProgressBar
                    android:id="@+id/toolbar_progress_bar"
                    android:layout_width="@dimen/tool_bar_progress_loading_w_h"
                    android:layout_height="@dimen/tool_bar_progress_loading_w_h"
                    android:layout_toStartOf="@+id/quan_huyen_ln"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:indeterminateTint="@color/white"
                    android:indeterminateTintMode="src_in"
                    android:layout_gravity="right"/>
                <LinearLayout
                    android:id="@+id/quan_huyen_ln"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@drawable/selector_bg_thong_bao"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quan_huyen"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tool_bar_title_reserve_search_size"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:paddingStart="@dimen/margin_all"
                        android:id="@+id/toolbar_quan_huyen"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:src="@drawable/mui_ten_xuong"
                        android:paddingEnd="@dimen/margin_all"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

</LinearLayout>