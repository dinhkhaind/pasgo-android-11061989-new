<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/home_category_ln"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lnParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/bg_line_listview">
        </View>
        <TextView
            android:id="@+id/parent_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/home_category_item_tv_margin"
            android:paddingBottom="@dimen/home_category_item_tv_margin"
            android:paddingStart="@dimen/home_category_item_tv_margin"
            android:gravity="center_vertical"
            android:textColor="@color/gray_detail_text"
            android:background="@color/home_category_parent"
            android:text="@string/reserve_diem_de_xuat"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/bg_line_listview">
        </View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/child_ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_transparent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_category_item_height">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/category_img"
                android:layout_width="@dimen/home_category_item__image_height"
                android:layout_height="@dimen/home_category_item__image_height"
                android:layout_marginStart="@dimen/home_category_item_margin_lr"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_full"
                fresco:placeholderImage="@drawable/image_loading"
                android:layout_gravity="center_horizontal"
                app:roundAsCircle="true"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/category_default_img"
                android:layout_width="@dimen/home_category_item__image_height"
                android:layout_height="@dimen/home_category_item__image_height"
                android:layout_marginStart="@dimen/home_category_item_margin_lr"
                android:layout_centerVertical="true"
                android:visibility="gone"
                fresco:placeholderImage="@drawable/image_loading"
                android:layout_gravity="center_horizontal"
                app:roundAsCircle="true"
                />
            <TextView
                android:id="@+id/child_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/category_img"
                android:layout_toStartOf="@+id/next_img"
                android:layout_marginStart="@dimen/text_margin_left_right"
                android:layout_marginEnd="@dimen/text_margin_left_right"
                android:textColor="@color/black"
                android:textSize="@dimen/home_category_item_chidl_tv"
                android:text="Buffet"/>
            <ImageButton
                android:id="@+id/next_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/home_category_item_margin_lr"
                android:background="@color/transparent"
                android:src="@drawable/reserve_right_arrow"/>
        </RelativeLayout>
        <View
            android:id="@+id/child_v"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginStart="@dimen/home_category_item_margin_lr"
            android:layout_marginEnd="@dimen/home_category_item_margin_lr"
            android:background="@color/bg_line_listview">

        </View>
    </LinearLayout>

</LinearLayout>