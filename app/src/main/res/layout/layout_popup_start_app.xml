<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/ndkm_info"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTieuDe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notify"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/margin_all"
                    android:textColor="@color/red_strong"
                    android:textSize="@dimen/notify_title_text_size"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/red_strong"
                    android:layout_marginStart="@dimen/margin_popup_line"
                    android:layout_marginEnd="@dimen/margin_popup_line"/>

                <TextView
                    android:id="@+id/tvThongBao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notify"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_all"
                    android:textColor="@color/black"
                    android:textSize="@dimen/notify_content_text_size"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@drawable/border_vien"
                    android:layout_marginStart="@dimen/margin_popup_line"
                    android:layout_marginEnd="@dimen/margin_popup_line"/>.
                <com.onepas.android.pasgo.widgets.AutoBGButton
                    android:id="@+id/btnOk"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/popup_khuyenmai_buttom_height"
                    android:layout_marginTop="@dimen/margin_all"
                    android:background="@color/ndkm_info"
                    android:text="@string/btn_ok"
                    android:textColor="@color/tttx_text"
                    android:textSize="@dimen/notify_btnok_text_size" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout >