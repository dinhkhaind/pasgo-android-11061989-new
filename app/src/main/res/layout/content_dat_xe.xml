    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="@dimen/booking_img_dia_diem_don_den"
        android:background="@drawable/border_vien"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/lnChonXe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_row_action_all"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/datxe_text_margin_top_bottom"
            android:layout_marginTop="@dimen/datxe_text_margin_top_bottom">

            <ImageView
                android:id="@+id/imgTaxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_taxi_all" />

            <ImageView
                android:id="@+id/imgChonLoaiXe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:src="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tvTaxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/imgChonLoaiXe"
                android:layout_toEndOf="@+id/imgTaxi"
                android:text="@string/chon_loai_xe_tat_ca"
                android:textColor="@color/den"
                android:textSize="@dimen/datxe_text_dia_diem_don_size" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_vien" />

    <LinearLayout
        android:id="@+id/lnDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_row_action_all">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/datxe_text_margin_top_bottom"
            android:layout_marginTop="@dimen/datxe_text_margin_top_bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_time" />

            <ImageView
                android:id="@+id/imgChonTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:src="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tvGoiNgayBayGio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toStartOf="@+id/imgChonTime"
                android:layout_toEndOf="@+id/imgTime"
                android:text="@string/dat_xe_goi_ngay_bay_gio"
                android:textColor="@color/den"
                android:textSize="@dimen/datxe_text_dia_diem_don_size" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="@dimen/booking_img_dia_diem_don_den"
        android:background="@drawable/border_vien" />

    <LinearLayout
        android:id="@+id/lnKhuyenMai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/selector_row_action_all">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/datxe_text_margin_top_bottom"
            android:layout_marginTop="@dimen/datxe_text_margin_top_bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgKhuyenMai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_khuyenmai" />

            <TextView
                android:id="@+id/tvKhuyenMai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toStartOf="@+id/imgSponsorCodeArr"
                android:layout_toEndOf="@+id/imgKhuyenMai"
                android:imeOptions="actionDone"
                android:lines="1"
                android:ellipsize="end"
                android:text="@string/dat_xe_ma_khuyen_mai"
                android:textSize="@dimen/datxe_text_dia_diem_don_size" />

            <ImageView
                android:id="@+id/imgSponsorCodeArr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="@dimen/booking_img_dia_diem_don_den"
        android:background="@drawable/border_vien" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/datxe_text_margin_top_bottom"
        android:layout_marginEnd="@dimen/datxe_text_margin_top_bottom"
        android:layout_marginTop="@dimen/datxe_text_margin_top_bottom"
        android:background="@drawable/selector_row_action_all"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMoTa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_tips_mota" />

        <EditText
            android:id="@+id/edtMoTa"
            android:layout_width="match_parent"
            android:layout_height="@dimen/datxe_edittext_datxe_height"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_edittext"
            android:hint="@string/dat_xe_mo_ta_them_de_taxi_don"
            android:textColor="@color/den"
            android:textSize="@dimen/datxe_text_dia_diem_don_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/border_vien" />

    <Button
        android:id="@+id/btnDatxe"
        style="@style/AppTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttom_height"
        android:layout_margin="@dimen/margin_all"
        android:text="@string/continue_booking"
        android:textColor="@android:color/white"
        android:textSize="@dimen/datxe_text_dia_diem_don_size" />
</LinearLayout>