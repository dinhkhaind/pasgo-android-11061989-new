<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/error_connect_network_layout" />

    <include layout="@layout/warning_time_dat_truoc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/reserve_detail_image_height"
        android:background="@drawable/call_background"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/reserver_detail_name2_margin_left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/call_1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/call1"
                        android:textColor="@color/white"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/booking_sdt_tv_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hotline_booking"
                        android:textColor="@color/white"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/booking_hotline_tv_size" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="top|center_horizontal">

                <ImageView
                    android:id="@+id/call_img"
                    android:layout_width="@dimen/datxe_call_img_width"
                    android:layout_height="wrap_content"
                    android:src="@drawable/goi_dat_cho_eng" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAlignBottom="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:src="@drawable/quang_cao_dat_xe_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotline_call_taxi"
                android:textColor="@color/white"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/booking_hotline_tv_size" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlDiemDon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_row_action_all"
        android:paddingBottom="@dimen/booking_ln_dia_diem_don_den_margin_top_bottom"
        android:paddingTop="@dimen/booking_ln_dia_diem_don_den_margin_top_bottom">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/booking_img_dia_diem_don_den"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_nguoidung" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/imgChonDiemDon"
            android:layout_toEndOf="@+id/imageView1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViecccccw1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dat_xe_dia_chi_don"
                    android:textColor="@color/den"
                    android:textSize="@dimen/datxe_text_dia_diem_don_size" />

                <TextView
                    android:id="@+id/tvDiaDiemDon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="@string/dia_diem_hien_tai"
                    android:textColor="@color/den"
                    android:textSize="@dimen/datxe_text_dia_diem_don_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDiaDiemDonLanCan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/den"
                android:textSize="@dimen/datxe_text_dia_diem_don_size"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgChonDiemDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/booking_img_dia_diem_don_den"
        android:background="@drawable/border_vien" />

    <RelativeLayout
        android:id="@+id/rlDiemDen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_row_action_all"
        android:paddingBottom="@dimen/booking_ln_dia_diem_don_den_margin_top_bottom"
        android:paddingTop="@dimen/booking_ln_dia_diem_don_den_margin_top_bottom">

        <ImageView
            android:id="@+id/imgDiemDen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/booking_img_dia_diem_don_den"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_diemden_an" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/imgChonDiemDen"
            android:layout_toEndOf="@+id/imgDiemDen"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDiaDiemDonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dat_xe_dia_chi_den"
                    android:textColor="@color/den"
                    android:textSize="@dimen/datxe_text_dia_diem_don_size" />

                <TextView
                    android:id="@+id/tvDiaDiemDen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="@string/dat_xe_nhan_chon_dia_diem"
                    android:textColor="@color/den"
                    android:textSize="@dimen/datxe_text_dia_diem_don_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDiaDenLanCan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="diem den"
                android:textColor="@color/den"
                android:textSize="@dimen/datxe_text_dia_diem_don_size"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgChonDiemDen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:src="@drawable/arrow_right"
            android:visibility="visible" />
    </RelativeLayout>


