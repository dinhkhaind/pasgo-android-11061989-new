<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/row_danh_sach_quy_dinh_margin_top_bottom"
        android:layout_marginTop="@dimen/row_danh_sach_quy_dinh_margin_top_bottom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_quydinh_cs" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgView"
            android:layout_toStartOf="@+id/imgChon"
            android:text="@string/chinh_sach_bao_mat" />
        <ImageView
            android:id="@+id/imgChon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

</LinearLayout>