<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pageview_image_height"
    android:background="@color/white" >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/im_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/image_loading"/>
    <RelativeLayout
        android:id="@+id/text_intro"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_content_intro"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/numberp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/margin_all"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="@dimen/noi_dung_km_image_next_width_height"
                android:layout_height="@dimen/noi_dung_km_image_next_width_height"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval" >
            </ImageView>

            <ImageView
                android:id="@+id/circle2"
                android:layout_width="@dimen/noi_dung_km_image_next_width_height"
                android:layout_height="@dimen/noi_dung_km_image_next_width_height"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </ImageView>

            <ImageView
                android:id="@+id/circle3"
                android:layout_width="@dimen/noi_dung_km_image_next_width_height"
                android:layout_height="@dimen/noi_dung_km_image_next_width_height"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </ImageView>

            <ImageView
                android:id="@+id/circle4"
                android:layout_width="@dimen/noi_dung_km_image_next_width_height"
                android:layout_height="@dimen/noi_dung_km_image_next_width_height"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </ImageView>
            <ImageView
                android:id="@+id/circle5"
                android:layout_width="@dimen/noi_dung_km_image_next_width_height"
                android:layout_height="@dimen/noi_dung_km_image_next_width_height"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </ImageView>
            <ImageView
                android:id="@+id/circle6"
                android:layout_width="@dimen/noi_dung_km_image_next_width_height"
                android:layout_height="@dimen/noi_dung_km_image_next_width_height"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </ImageView>
            <ImageView
                android:id="@+id/circle7"
                android:layout_width="@dimen/noi_dung_km_image_next_width_height"
                android:layout_height="@dimen/noi_dung_km_image_next_width_height"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </ImageView>
            <ImageView
                android:id="@+id/circle8"
                android:layout_width="@dimen/noi_dung_km_image_next_width_height"
                android:layout_height="@dimen/noi_dung_km_image_next_width_height"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </ImageView>
            <ImageView
                android:id="@+id/circle9"
                android:layout_width="@dimen/noi_dung_km_image_next_width_height"
                android:layout_height="@dimen/noi_dung_km_image_next_width_height"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </ImageView>
            <ImageView
                android:id="@+id/circle10"
                android:layout_width="@dimen/noi_dung_km_image_next_width_height"
                android:layout_height="@dimen/noi_dung_km_image_next_width_height"
                android:layout_marginEnd="5dp"
                android:background="@drawable/oval_white" >
            </ImageView>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>