<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnNhomKhuyenMai"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_transparent_gray"
    android:orientation="vertical">
    <!--android:background="@drawable/selector_bg_transparent_gray"-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_horizontal_lv_height"
        android:layout_marginStart="@dimen/khuyen_mai_lv__item_margin_left_right"
        android:layout_marginEnd="@dimen/khuyen_mai_lv__item_margin_left_right"
        android:layout_marginTop="@dimen/khuyen_mai_lv__item_img_margin_top"

        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nhomkm_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/do_khach_san"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tvName"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:lines="1"
            android:ellipsize="end"
            android:text="@string/tat_ca"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/khuyen_mai_lv__item_img_margin_bottom"
            android:textColor="@color/nhomkm_lv_text_color"/>

    </RelativeLayout>

</LinearLayout>
