<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/tvMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="@dimen/month_text_size"
        android:layout_marginStart="@dimen/margin_all"
        android:layout_marginTop="@dimen/margin_all"
        android:layout_marginBottom="@dimen/margin_all"
        android:textColor="@color/black"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/rlValue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="9dp"
        android:paddingTop="9dp" >
        <ImageView
            android:id="@+id/imgAvata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ls_hanhxe"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/lich_su_chuyen_di_image_padding_left"
            android:layout_marginTop="@dimen/margin_all"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/imgHuy"
            android:layout_toEndOf="@+id/imgAvata"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvLoaiDatXe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="Taxi thường"
                    android:textStyle="bold"
                    android:textSize="@dimen/row_dat_truoc_title_text_size">

                </TextView>
                <TextView
                    android:id="@+id/tv_tai_tro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:text="100 vnd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/row_dat_truoc_tai_tro_text_size"
                    android:background="@drawable/corner_red_strong_all"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/ic_lscd_detail"
                    android:layout_height="@dimen/ic_lscd_detail"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_diemdon_nksd" />

                <TextView
                    android:id="@+id/diaChiDon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="So 25 Lac Trung, HN"
                    android:lines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/ic_lscd_detail"
                    android:layout_height="@dimen/ic_lscd_detail"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_diemden_nksd" />

                <TextView
                    android:id="@+id/diaChiDen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Ben Xe Giap Bat"
                    android:lines="1"
                    android:ellipsize="end" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="@dimen/ic_lscd_detail"
                    android:layout_height="@dimen/ic_lscd_detail"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_thoigian_nksd" />
                <TextView
                    android:id="@+id/gio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="10:15" />

                <TextView
                    android:id="@+id/ngay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="19/5/2014"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="@dimen/margin_all"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ls_huy"
            android:layout_toStartOf="@+id/imgDetail"
            android:layout_centerVertical="true"
            android:visibility="visible"
            />
        <ImageView
            android:id="@+id/imgDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
</LinearLayout>