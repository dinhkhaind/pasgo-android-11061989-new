<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>

    </style>
    <!-- Application theme. -->

    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    <style name="AppThemeV7" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:windowBackground">@color/white</item>
        <!--text button hiện thị bình thường-->
        <item name="android:buttonStyle">@style/My.Button</item>
        <!--text button hiện thị bình thường <5 và >5-->
        <item name="android:textAppearanceButton">@style/My.Button</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>

    </style>

    <style name="MySearchViewStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@color/text_color_hint</item>
        <!-- Background for the actions section (e.g. voice, submit) -->
        <item name="submitBackground">@color/black</item>
        <!--<item name="suggestionRowLayout">...</item>-->
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>

    </style>
    <style name="ActionBar.Solid.GreenStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/ColorPrimary</item>
    </style>
    <style name="AppThemeToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!--text button hiện thị bình thường-->
        <item name="android:buttonStyle">@style/My.Button</item>
        <!--text button hiện thị bình thường <5 và >5-->
        <item name="android:textAppearanceButton">@style/My.Button</item>

    </style>
    <style name="My.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/tool_bar_title_size</item>
    </style>
    <style name="AppThemeFullScreenV7" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--text button hiện thị bình thường-->
        <item name="android:buttonStyle">@style/My.Button</item>
        <!--text button hiện thị bình thường <5 và >5-->
        <item name="android:textAppearanceButton">@style/My.Button</item>
    </style>
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="android:buttonStyle">@style/My.Button</item>
        <!--text button hiện thị bình thường <5 và >5-->
        <item name="android:textAppearanceButton">@style/My.Button</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_back</item>
    </style>
    <style name="AppThemeDatePicker" parent="android:Theme.Holo.Light">
        <!--<item name="android:dialogTheme">@style/DialogTheme</item>-->
    </style>

    <style name="login_image">
        <item name="android:layout_marginStart">@dimen/login_margin_left_right</item>
        <item name="android:layout_marginEnd">@dimen/login_margin_left_right</item>
        <item name="android:paddingTop">@dimen/login_margin_top</item>
    </style>

    <style name="login_image_again">
        <item name="android:layout_marginStart">@dimen/login_margin_left_right</item>
        <item name="android:layout_marginEnd">@dimen/login_margin_left_right</item>
    </style>

    <style name="commentRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_selector</item>
        <item name="android:minHeight">46dip</item>
        <item name="android:maxHeight">46dip</item>
    </style>

    <style name="NewDialogFull">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="NewDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="NewDialogTop">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="rowChatLuongRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_chat_luong_selector</item>
        <item name="android:minHeight">@dimen/custom_ratingbar_chat_luong</item>
        <item name="android:maxHeight">@dimen/custom_ratingbar_chat_luong</item>
    </style>

    <style name="rowNoiDungKhuyenmaiRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_row_diadiemfree_selector</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <style name="rowNoiDungKhuyenMaiChatLuongRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_chat_luong_chi_tiet_selector</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>
     <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@color/red_strong</item>
        <item name="android:background">@color/red_strong</item>
        <item name="colorButtonNormal">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>