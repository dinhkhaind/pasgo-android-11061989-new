<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dip" />
            <gradient
                android:angle="270"
                android:centerColor="#fff1efef"
                android:centerY="0.2"
                android:endColor="#fff1efef"
                android:startColor="#fff1efef" /> 
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dip" />
                <gradient
                    android:angle="0" 
                    android:endColor="#ff9e0928"
                    android:startColor="#ff9e0928" />
            </shape>
        </clip>
    </item>
</layer-list>